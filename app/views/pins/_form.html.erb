<%= simple_form_for @pin, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>


  <div class="form-group">

  	Upload your Image
    <% f.label :image %>
  	<%= f.file_field :image, class: "form-inputs" %>
    
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>



  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-danger" %>
  </div>
<% end %>
